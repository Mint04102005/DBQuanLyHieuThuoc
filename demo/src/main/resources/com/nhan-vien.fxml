<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="765" prefWidth="1145" style="-fx-background-color: #f8fafd;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="24" style="-fx-padding: 10 0 10 0;">
            <children>
                <VBox alignment="CENTER" spacing="4">
                    <Button fx:id="btnThem" prefHeight="48" prefWidth="48" style="-fx-background-color: #00e676; -fx-background-radius: 50%; -fx-padding: 0;">
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0">
                        <image>
                           <Image url="@assets/add.png" />
                        </image></ImageView>
                        </graphic>
                    </Button>
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #222; -fx-font-weight: bold;" text="THÊM" />
                </VBox>
                <VBox alignment="CENTER" spacing="4">
                    <Button fx:id="btnSua" prefHeight="48" prefWidth="48" style="-fx-background-color: #ffd600; -fx-background-radius: 50%; -fx-padding: 0;">
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0">
                        <image>
                           <Image url="@assets/update.png" />
                        </image></ImageView>
                        </graphic>
                    </Button>
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #222; -fx-font-weight: bold;" text="SỬA" />
                </VBox>
                <VBox alignment="CENTER" spacing="4">
                    <Button fx:id="btnXoa" prefHeight="48" prefWidth="48" style="-fx-background-color: #ff5252; -fx-background-radius: 50%; -fx-padding: 0;">
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0">
                        <image>
                           <Image url="@assets/delete.png" />
                        </image></ImageView>
                        </graphic>
                    </Button>
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #222; -fx-font-weight: bold;" text="XÓA" />
                </VBox>
                <VBox alignment="CENTER" spacing="4">
                    <Button fx:id="btnInfo" prefHeight="48" prefWidth="48" style="-fx-background-color: #2979ff; -fx-background-radius: 50%; -fx-padding: 0;">
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0">
                        <image>
                           <Image url="@assets/info.png" />
                        </image></ImageView>
                        </graphic>
                    </Button>
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #222; -fx-font-weight: bold;" text="INFO" />
                </VBox>
                <VBox alignment="CENTER" spacing="4">
                    <Button fx:id="btnImport" prefHeight="48" prefWidth="48" style="-fx-background-color: #43a047; -fx-background-radius: 50%; -fx-padding: 0;">
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0">
                        <image>
                           <Image url="@assets/import.png" />
                        </image></ImageView>
                        </graphic>
                    </Button>
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #222; -fx-font-weight: bold;" text="IMPORT" />
                </VBox>
                <VBox alignment="CENTER" spacing="4">
                    <Button fx:id="btnExport" prefHeight="48" prefWidth="48" style="-fx-background-color: #ffd600; -fx-background-radius: 50%; -fx-padding: 0;">
                        <graphic>
                            <ImageView fitHeight="50.0" fitWidth="50.0">
                        <image>
                           <Image url="@assets/export.png" />
                        </image></ImageView>
                        </graphic>
                    </Button>
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #222; -fx-font-weight: bold;" text="EXPORT" />
                </VBox>
                <Region prefWidth="40" />
                <ComboBox fx:id="filterCombo" prefWidth="100" promptText="Tất cả" />
                <TextField fx:id="searchField" prefWidth="220" promptText="Tìm kiếm..." />
                <Button fx:id="refreshButton" style="-fx-background-color: #fff;">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24">
                     <image>
                        <Image url="@assets/reload.png" />
                     </image></ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <Label maxWidth="Infinity" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #00bfae; -fx-text-fill: white; -fx-padding: 6 0 6 0; -fx-alignment: CENTER;" text="DANH SÁCH THÔNG TIN NHÂN VIÊN" />
        <TableView fx:id="nhanVienTable" prefHeight="600">
            <columns>
                <TableColumn prefWidth="50" style="-fx-alignment: CENTER;" text="STT" />
                <TableColumn prefWidth="120" style="-fx-alignment: CENTER-LEFT;" text="Mã nhân viên" />
                <TableColumn prefWidth="200" style="-fx-alignment: CENTER-LEFT;" text="Họ tên" />
                <TableColumn prefWidth="120" style="-fx-alignment: CENTER-LEFT;" text="Số điện thoại" />
                <TableColumn prefWidth="100" style="-fx-alignment: CENTER;" text="Giới tính" />
                <TableColumn prefWidth="100" style="-fx-alignment: CENTER;" text="Năm sinh" />
                <TableColumn prefWidth="140" style="-fx-alignment: CENTER;" text="Ngày vào làm" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
