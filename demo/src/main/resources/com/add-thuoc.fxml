<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="0" prefWidth="480" prefHeight="520" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="THÊM THUỐC" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #009999; -fx-text-fill: white; -fx-padding: 12 0 12 0; -fx-alignment: CENTER;" maxWidth="Infinity" />
        <GridPane hgap="16" vgap="18" style="-fx-padding: 24 32 24 32;">
            <children>
                <Label text="Mã thuốc" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="idThuocField" promptText="Mã thuốc" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Tên thuốc" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="tenThuocField" promptText="Tên thuốc" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="Thành phần" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="thanhPhanField" promptText="Thành phần" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <Label text="Đơn vị tính" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="donViTinhField" promptText="Đơn vị tính" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                <Label text="Danh mục" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="danhMucField" promptText="Danh mục" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                <Label text="Xuất xứ" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <TextField fx:id="xuatXuField" promptText="Xuất xứ" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                <Label text="Giá nhập" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <TextField fx:id="giaNhapField" promptText="Giá nhập" GridPane.rowIndex="6" GridPane.columnIndex="1" />
                <Label text="Giá bán" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                <TextField fx:id="giaBanField" promptText="Giá bán" GridPane.rowIndex="7" GridPane.columnIndex="1" />
                <Label text="Số lượng tồn" GridPane.rowIndex="8" GridPane.columnIndex="0" />
                <TextField fx:id="soLuongTonField" promptText="Số lượng tồn" GridPane.rowIndex="8" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="16" style="-fx-padding: 0 0 24 0;">
            <children>
                <Button fx:id="btnHuyBoThuoc" text="HỦY BỎ" style="-fx-background-color: #ff6666; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 6;" prefWidth="180" />
                <Button fx:id="btnThemThuoc" text="THÊM" style="-fx-background-color: #00bfae; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 6;" prefWidth="180" />
            </children>
        </HBox>
    </children>
</VBox>
