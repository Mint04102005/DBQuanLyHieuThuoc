<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="0" prefWidth="480" prefHeight="370" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="THÊM TÀI KHOẢN" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #009999; -fx-text-fill: white; -fx-padding: 12 0 12 0; -fx-alignment: CENTER;" maxWidth="Infinity" />
        <GridPane hgap="16" vgap="18" style="-fx-padding: 24 32 24 32;">
            <children>
                <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Password" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="Tên nhân viên" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="tenNhanVienField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <Label text="Vai trò" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <ComboBox fx:id="vaiTroCombo" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="16" style="-fx-padding: 0 0 24 0;">
            <children>
                <Button fx:id="btnHuyBoTaiKhoan" text="HỦY BỎ" style="-fx-background-color: #ff6666; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 6;" prefWidth="180" />
                <Button fx:id="btnThemTaiKhoan" text="THÊM" style="-fx-background-color: #00bfae; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 6;" prefWidth="180" />
            </children>
        </HBox>
    </children>
</VBox>
