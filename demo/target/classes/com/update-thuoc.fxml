<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="0" prefWidth="480" prefHeight="420" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="CẬP NHẬT THUỐC" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #009999; -fx-text-fill: white; -fx-padding: 12 0 12 0; -fx-alignment: CENTER;" maxWidth="Infinity" />
        <GridPane hgap="16" vgap="18" style="-fx-padding: 24 32 24 32;">
            <children>
                <Label text="Tên thuốc" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="tenThuocField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Danh mục" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="danhMucField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="Đơn vị tính" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="donViTinhField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <Label text="Số lượng" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="soLuongField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                <Label text="Đơn giá" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="donGiaField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                <Label text="Hạn sử dụng" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <DatePicker fx:id="hanSuDungPicker" GridPane.rowIndex="5" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="16" style="-fx-padding: 0 0 24 0;">
            <children>
                <Button fx:id="btnHuyBoThuoc" text="HỦY BỎ" style="-fx-background-color: #ff6666; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 6;" prefWidth="180" />
                <Button fx:id="btnCapNhatThuoc" text="CẬP NHẬT" style="-fx-background-color: #00bfae; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 6;" prefWidth="180" />
            </children>
        </HBox>
    </children>
</VBox>
