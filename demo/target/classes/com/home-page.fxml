                    <graphic>
                        <ImageView fitHeight="22" fitWidth="22">
                            <image>
                                <Image url="@assets/home/DangXuat.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <text>Đăng Xuất</text>
                    <VBox.margin>
                        <Insets top="200.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="servicePane" style="-fx-background-color: #fff;">
            <!-- Service content will be loaded here -->
        </StackPane>
    </center>
</BorderPane>
