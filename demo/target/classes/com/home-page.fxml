                    </graphic>
                    <text>Khách hàng</text>
                </Button>
                <Button fx:id="btnThuoc" maxWidth="200" minWidth="200" style="-fx-background-color: white; -fx-text-fill: #222; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 8 0 8 18; -fx-background-radius: 8;" onAction="#handleThuocAction">
                    <graphic>
                        <ImageView fitHeight="22" fitWidth="22">
                            <image>
                                <Image url="@assets/home/Thuoc.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <text>Thuốc</text>
                </Button>
                <Button fx:id="btnPhieuNhap" maxWidth="200" minWidth="200" style="-fx-background-color: white; -fx-text-fill: #222; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 8 0 8 18; -fx-background-radius: 8;" onAction="#handlePhieuNhapAction">
                    <graphic>
                        <ImageView fitHeight="22" fitWidth="22">
                            <image>
                                <Image url="@assets/home/PhieuNhap.png" />
                            </image>
